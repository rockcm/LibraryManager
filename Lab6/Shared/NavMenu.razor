<style>
    .navbar-custom {
        background-color: #FF5733; /* Set your desired background color here */
        color: white; /* Set text color */
    }
</style>
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Library Manager</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="managebooks">
                <span class="oi oi-book" aria-hidden="true"></span> Manage Books
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="manageusers">
                <span class="oi oi-person" aria-hidden="true"></span> Manage Users
            </NavLink>
        </div>
       
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="borrowbook">
                <span class="oi oi-bookmark" aria-hidden="true"></span> Borrow Book
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="returnbook">
                <span class="oi oi-arrow-left" aria-hidden="true"></span> Return Book
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="borrowedbooks">
                <span class="oi oi-briefcase" aria-hidden="true"></span> Borrowed Books
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="editbook">
                <span class="oi oi-resize-width" aria-hidden="true"></span> Edit Books
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="edituser">
                <span class="oi oi-browser" aria-hidden="true"></span> Edit Users
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
